@{
  Layout = "_Layout";
}


<h1>Airline Planner</h1>
<hr />
<h2>Departures:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var departure in Model)
    {
      <li><a href='/departures/@departure.GetId()'>@departure.GetDepartureCity()</a></li>
    }
  </ul>
}
<h4><a href="/departures/new">Add New Departure City</a></h4>
<h4><a href="/">Return home</a></h4>
